#include <iostream>
using namespace std;

int main()
{
  int a, sum, i;
  
  
  cout << "Enter a number:";
  cin >> a;
  
  while (a>0)
  	{
  		for (sum=0, i=1; i<=a; i++)
  			sum+=i;
  			
  		cout << "The sum of all whole numbers from 1 to " << a << " is " << sum << "." << '\n';
  		cout << "Enter a number:";
  		cin >> a;
  		
	}
	cout << "Thank You!" << '\n';
	
  

 
    return 0;
}
